<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
    <%= attachment_image_tag users, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
    <table class="table">
    <tbody><tr></tr>
    <tr>
    <th>name</th>
    <th><%= current_user.name %></th>
    </tr>
    <tr>
    <th>introduction</th>
    <th<%= current_user.introduction %>></th>
    </tr>
    </tbody>
    </table>
    　
    <div class="row">
    <%= link_to "", edit_user_path(user), {class: "btn btn-outline-secondary btn-block fas fa-user-cog"} %>
    </div>
    
    <h2 class="mt-3">New book</h2>
    <% if @post_book.errors.any? %>
      <%= @post_book.errors.count %>件のエラーが発生しました
      <% @post_book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>
    
    <%= form_with model: @post_book, local:true do |f| %>
    
    <div class="form-group">
    <label for="book_title">Title</label>
    <input class="form-control book_title" type="text" name="book[title]" id="book_title">
    </div>
    <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
    </div>
    <div class="form-group">
    <%= f.submit "Create Book" , class: 'btn btn-success' %>
    </div>
    <% end %>
    
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
    <thead>
    <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    </tbody>
    </table>
    </div>
  </div>
</div>

<!--以上-->